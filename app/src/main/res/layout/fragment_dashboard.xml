                            android:textAlignment="center"
                            android:textColor="@color/cafe" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:paddingTop="20dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="20dp">

                            <ImageView
                                android:id="@+id/vaso1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/marron"
                                android:padding="10dp"
                                android:src="@mipmap/cafeicon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/vaso2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/marron"
                                android:padding="10dp"
                                android:src="@mipmap/cafeicon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/vaso3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/marron"
                                android:padding="10dp"
                                android:src="@mipmap/cafeicon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/vaso4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/marron"
                                android:padding="10dp"
                                android:src="@mipmap/cafeicon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/vaso5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/marron"
                                android:padding="10dp"
                                android:src="@mipmap/cafeicon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/vaso6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/marron"
                                android:padding="10dp"
                                android:src="@mipmap/cafeicon"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/unoTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/carne2"
                                android:padding="12dp"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@color/cafe"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/dosTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/carne2"
                                android:padding="12dp"
                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="@color/cafe"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tresTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/carne2"
                                android:padding="12dp"
                                android:text="3"

                                android:textAlignment="center"
                                android:textColor="@color/cafe"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/cuatroTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/carne2"
                                android:padding="12dp"
                                android:text="4"
                                android:textAlignment="center"
                                android:textColor="@color/cafe"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/cincoTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/carne2"
                                android:padding="12dp"
                                android:text="5"
                                android:textAlignment="center"
                                android:textColor="@color/cafe"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/seisTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@color/carne2"
                                android:padding="12dp"
                                android:text="6"
                                android:textAlignment="center"
                                android:textColor="@color/cafe"
                                android:visibility="visible" />


                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/parrafo1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:letterSpacing="-0.05"
                    android:text="Junta 6 visitas para una bebida gratis\n en tu proxima compra."
                    android:textColor="@color/cafe" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/parrafo2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:letterSpacing="-0.05"
                            android:lineSpacingMultiplier="1.2"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            android:text="Â¡Ven a Tierra Garat!\n\nDa click en Suma vistias y ObtÃ©n tu bebida,\nacerca tu telÃ©fono con el cÃ³digo QR al \ncafetero para registar visitas o canjear \ntu bebida.  "
                            android:textColor="@color/cafe" />

                        <Button
                            android:id="@+id/sumaBttn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".35"
                            android:background="@color/cafe2"
                            android:clickable="false"
                            android:letterSpacing="-0.05"
                            android:text="SUMA VISITAS"
                            android:textColor="@color/cafe_claro" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>


</RelativeLayout>