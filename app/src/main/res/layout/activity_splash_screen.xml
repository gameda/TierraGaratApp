<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="mx.digitalcoaster.tierra_garat_puntos.activities.SplashScreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash1"
        android:src="@drawable/splash_1"
        android:visibility="visible"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash2"
        android:src="@drawable/splash_2"
        android:visibility="gone"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash3"
        android:src="@drawable/splash_3"
        android:visibility="gone"
        android:scaleType="centerCrop" />


</RelativeLayout>
