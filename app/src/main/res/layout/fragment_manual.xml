<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.access.ManualFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/registro"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/transparente"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="¿YA ESTÁS RECIBIENDO"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:text="BENEFICIOS DE NUESTRA TIERRA?"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:lineSpacingMultiplier="1.2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/loginBttn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonSize"
            android:textSize="@dimen/text_size_question"
            android:layout_above="@+id/signinBttn"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/btnacceso"
            android:text="@string/ya_soy"
            android:textColor="@color/beige" />


        <Button
            android:id="@+id/signinBttn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonSize"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@mipmap/btnregistro"
            android:text="@string/uno_no"
            android:textColor="@color/cafe"
            android:textSize="@dimen/text_size_question" />


    </RelativeLayout>





</RelativeLayout>