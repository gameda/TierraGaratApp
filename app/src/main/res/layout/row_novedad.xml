<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige"
    android:id="@+id/beneficioRow">

    <LinearLayout
        android:id="@+id/promocionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/marco3"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textAllCaps="true"
                android:textColor="@color/cafe2"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:lineSpacingMultiplier="1.2"
                android:text="descripcion"
                android:textColor="@color/cafe2"
                android:textSize="12dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/markIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@mipmap/mapacafe" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/markIV"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:textSize="10dp"
                android:text="Ver sucusal "
                android:textColor="@color/cafe2" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>