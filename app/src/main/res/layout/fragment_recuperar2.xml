<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    android:background="@color/beige"
    tools:context=".fragments.access.recuperarContraseña.Recuperar2Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/backBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@color/transparente"
            android:scaleX="1.5"
            android:scaleY="2"
            android:src="@mipmap/flecha_izquierda"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/registro2" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Restablecer contraseña"
            android:textAlignment="center"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/cafe2"
            android:textSize="@dimen/text_size_question" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/space_btwn_questions"
            android:text="Enviamos el código a xxx@xxx.com \nPor favor ingrésalo aquí:"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.2"

            android:textColor="@color/cafe2"
            android:textSize="@dimen/text_size_question" />


        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_btwn_questions"
            android:text="CÓDIGO"
            android:textAlignment="center"
            android:textColor="@color/cafe2"
            android:textSize="@dimen/text_size_question" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/num1"
                android:layout_width="0dp"
                android:layout_height="@dimen/question_heigh"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle1"
                android:hint="1"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:textColor="@color/cafe2"
                android:textCursorDrawable="@color/cafe2"
                android:textSize="@dimen/text_size_question"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/num2"
                android:layout_width="0dp"
                android:layout_height="@dimen/question_heigh"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle1"
                android:hint="2"
                android:layout_marginRight="20dp"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/cafe2"
                android:textCursorDrawable="@color/cafe2"
                android:textSize="@dimen/text_size_question" />

            <EditText
                android:id="@+id/num3"
                android:layout_width="0dp"
                android:layout_height="@dimen/question_heigh"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle1"
                android:hint="3"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/cafe2"
                android:textCursorDrawable="@color/cafe2"
                android:textSize="@dimen/text_size_question" />

            <EditText
                android:id="@+id/num4"
                android:layout_width="0dp"
                android:layout_height="@dimen/question_heigh"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle1"
                android:hint="4"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/cafe2"
                android:textCursorDrawable="@color/cafe2"
                android:textSize="@dimen/text_size_question" />


        </LinearLayout>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/space_btwn_questions"
            android:text="¿No recibiste un código?"
            android:textAlignment="center"
            android:textColor="@color/cafe2"
            android:textSize="@dimen/text_size_question" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/space_btwn_questions"
            android:text="Haz clic aquí para volver a enviarlo"
            android:textAlignment="center"
            android:clickable="true"
            android:textColor="@color/marron"
            android:textSize="@dimen/text_size_question" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textAlignment="center"
            android:textColor="@color/cafe2"
            android:textSize="@dimen/comple_datos" />
    </LinearLayout>


    <Button
        android:id="@+id/nextBttn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonSize"
        android:textSize="@dimen/text_size_question"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btonsiquiente"
        android:text="ENVIAR"
        android:gravity="center"
        android:textColor="@color/beige"
        android:paddingLeft="25dp"
        android:layout_marginBottom="11dp"/>



</LinearLayout                                                                                                                                                          >